                <tr>
                    <th>{{ 'cart.id'|trans }}</th>
                    <th>{{ 'cart.amount'|trans }}</th>
                    <th>{{ 'cart.date'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for p in paniers %}
                    <tr>
                        <td>{{ p.id }}</td>
